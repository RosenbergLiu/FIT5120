@inject IConfiguration configration

@page "/iteration2/recipes"

<div id="recipes">
    <PageTitle>Recipes</PageTitle>
    <RadzenRow Style="height: 10%; background-color: #90e0ef">
        <RadzenColumn Size="2">
            <RadzenText Text="Back" TextStyle="TextStyle.H3" TagName="TagName.H1" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow Style="height: 90%; width: 100%" Gap="0">
        <RadzenColumn Size="3" Style="background-color: #ade8f4">
            <RadzenStack Style="margin: 2rem" Gap="10" >
                <RadzenText Text="Add Ingredients" TextStyle="TextStyle.DisplayH4" />
                <RadzenRow>
                    @if (ingredientsList.Count > 0)
                    {
                        foreach (var item in ingredientsList)
                        {
                            <RadzenCard>
                                @item.IngredientName
                                <RadzenButton Icon="close" Variant="Variant.Text"></RadzenButton>
                            </RadzenCard>
                        }
                    }
                </RadzenRow>
                <RadzenTextBox @bind-Value="ingredientInput"></RadzenTextBox>
                <RadzenButton Click="Search" IsBusy="isLoading" BusyText="Searching ...">Search Ingradient</RadzenButton>
                
                    @if (ingredientsResult.Count > 0)
                    {
                        foreach (var item in ingredientsResult)
                        {
                            <RadzenButton Variant="Variant.Text" Click="@(args => Add(item))">@item.IngredientName</RadzenButton>
                        }
                    }
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn Size="9" Style="background-color: #caf0f8">

        </RadzenColumn>
    </RadzenRow>

</div>

    