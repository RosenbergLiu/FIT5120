@page "/Recipes"
@Html.AntiForgeryToken()
@model FoodSaver.Pages.RecipesModel
@{
    ViewData["Title"] = "Recipes Hub";
}


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Recipes Hub</h2>
                <ol>
                    <li><a href="/">Home</a></li>
                    <li>Recipes Hub</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->

    

    <section id="contact" class="contact" >
        <div class="container" >
            <div class="row" >
                <div class="col-lg-8" data-aos="fade-up" data-aos-delay="100">
                    <form method="post" role="form" class="shadow-form mt-4" style="height: 15rem">
                        <h4>Search Ingradient to Add</h4>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="subject" id="subject" asp-for="SearchField.Input" placeholder="Ingradient Name" required>
                        </div>
                        <div id="autocomplete-results"></div>

                        <script>
                            const inputEl = document.getElementById('subject');
                            const resultList = document.getElementById('autocomplete-results');
                            let delayTimeout = null;
                            var token = $('[name="__RequestVerificationToken"]').val();

                            inputEl.addEventListener('input', function () {
                                resultList.innerHTML = '';
                                resultList.style.display = 'none';
                                clearTimeout(delayTimeout);

                                if (inputEl.value.trim().length > 0) {
                                    delayTimeout = setTimeout(() => {   // Set a new timeout
                                        const settings = {
                                            async: true,
                                            crossDomain: true,
                                            url: `https://spoonacular-recipe-food-nutrition-v1.p.rapidapi.com/food/ingredients/autocomplete?query=${inputEl.value}&number=5`,
                                            method: 'GET',
                                            headers: {
                                                'X-RapidAPI-Key': 'bffaa60994mshad99b0c495fe234p1bbc5fjsn7179305ed32f',
                                                'X-RapidAPI-Host': 'spoonacular-recipe-food-nutrition-v1.p.rapidapi.com',
                                                "RequestVerificationToken": token
                                            }
                                        };

                                        $.ajax(settings).done(function (response) {
                                            if (response.length) {
                                                resultList.style.display = 'block';
                                                response.forEach(ingredient => {
                                                    const listItem = document.createElement('p');
                                                    listItem.textContent = ingredient.name;
                                                    listItem.addEventListener('click', function () {
                                                        inputEl.value = ingredient.name;
                                                        resultList.style.display = 'none';
                                                    });
                                                    resultList.appendChild(listItem);
                                                });
                                            }
                                        });
                                    }, 500);
                                }
                            });
                        </script>


                        <div class="text-center">
                            <button type="submit">Add to list</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4" data-aos="fade-left" data-aos-delay="100">
                    <div class="shadow-form mt-4" style="height: 15rem">
                        <h4>Added Ingradient</h4>
                        <div style="overflow-y: auto; overflow-x: hidden; height: 10rem" class="mt-3">
                            @foreach (var item in Model.Ingradients)
                            {
                                <div class="row">
                                    <div class="col-8"><p>@item.Name</p></div>
                                    <div class="col-4"><a href="#"><i class="bi bi-x"></i></a></div>
                                </div>
                            }
                        </div>
                        
                    </div>
                    
                </div>
            </div>

        </div>
    </section> 

</main><!-- End #main -->
